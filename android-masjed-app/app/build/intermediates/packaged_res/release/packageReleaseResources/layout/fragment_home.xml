<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#030a0d">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_masjed_gradient" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/dashboardScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="20dp"
            android:paddingBottom="24dp"
            android:scrollbarStyle="outsideOverlay">

            <LinearLayout
                android:id="@+id/homeContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingBottom="32dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/heroCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="36dp"
                app:cardElevation="0dp"
                app:strokeColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_home_header"
                    android:orientation="vertical"
                    android:padding="28dp">

                    <TextView
                        android:id="@+id/appTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="اللهم عجل لولیک الفرج"
                        android:textAlignment="center"
                        android:textColor="#FFF6D0"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textShamsiDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="چهارشنبه ۱۲ آذر ۱۴۰۴"
                        android:textColor="#0F172A"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textEvents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="بدون رویداد ویژه"
                        android:textColor="#1E293B"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="12dp" />

                    <LinearLayout
                        android:id="@+id/heroHadithContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_card_glass"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/textHadith"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="نص حدیث"
                            android:textColor="#042F2F"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textHadithTranslation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="ترجمه"
                            android:textColor="#065F46"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textHadithSource"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="منبع"
                            android:textColor="#475569"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/heroDevotionContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_devotional_dawn_card"
                        android:elevation="2dp"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/textDevotionTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="برنامه معنوی روز"
                            android:textColor="#042F2F"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textDevotionDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="دعای امروز و زیارت مخصوص"
                            android:textColor="#065F46"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonDailyPrayer"
                                style="@style/Widget.Material3.Button"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/bg_devotion_action"
                                android:elevation="4dp"
                                android:paddingStart="20dp"
                                android:paddingEnd="20dp"
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp"
                                android:text="دعای امروز"
                                android:textAllCaps="false"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:maxLines="1"
                                android:gravity="center"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMinTextSize="11sp"
                                app:autoSizeMaxTextSize="14sp"
                                app:autoSizeStepGranularity="0.5sp"
                                app:cornerRadius="18dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonDailyZiyarat"
                                style="@style/Widget.Material3.Button"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/bg_devotion_action"
                                android:elevation="4dp"
                                android:paddingStart="20dp"
                                android:paddingEnd="20dp"
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp"
                                android:text="زیارت امروز"
                                android:textAllCaps="false"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:maxLines="1"
                                android:gravity="center"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMinTextSize="11sp"
                                app:autoSizeMaxTextSize="14sp"
                                app:autoSizeStepGranularity="0.5sp"
                                app:cornerRadius="18dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:orientation="vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonOpenFullSite"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="نسخه وب"
                            android:textAllCaps="false"
                            app:cornerRadius="18dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/textQuickActionsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="دسترسی‌های سریع"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/quickActionsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:divider="@android:color/transparent"
                android:showDividers="middle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/textCityChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_chip_city"
                    android:gravity="center_vertical"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@android:drawable/ic_menu_mylocation"
                        android:tint="#0F172A" />

                    <TextView
                        android:id="@+id/textCity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="مشهد"
                        android:textColor="#0F172A"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="اوقات شرعی"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/prayerCardContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:padding="12dp">

                    <LinearLayout
                        android:id="@+id/prayerNavRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/buttonPreviousDay"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:background="@drawable/bg_prayer_nav_button"
                            android:contentDescription="@string/prayer_nav_previous"
                            android:padding="12dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_chevron_left"
                            android:tint="@android:color/white" />

                        <TextView
                            android:id="@+id/textPrayerSelectedDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="سه‌شنبه ۱۰ مهر ۱۴۰۲"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/buttonNextDay"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:background="@drawable/bg_prayer_nav_button"
                            android:contentDescription="@string/prayer_nav_next"
                            android:padding="12dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_chevron_right"
                            android:tint="@android:color/white" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonToday"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="6dp"
                        android:text="@string/prayer_nav_today"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:visibility="gone"
                        app:cornerRadius="14dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="12dp"
                        android:background="#1EFFFFFF" />

                    <GridLayout
                        android:id="@+id/prayerGrid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:alignmentMode="alignMargins"
                        android:columnCount="2"
                        android:paddingTop="2dp"
                        android:useDefaultMargins="false">

                        <include
                            android:id="@+id/cardFajr"
                            layout="@layout/item_prayer_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1" />

                        <include
                            android:id="@+id/cardSunrise"
                            layout="@layout/item_prayer_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1" />

                        <include
                            android:id="@+id/cardZuhr"
                            layout="@layout/item_prayer_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1" />

                        <include
                            android:id="@+id/cardSunset"
                            layout="@layout/item_prayer_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1" />

                        <include
                            android:id="@+id/cardMaghrib"
                            layout="@layout/item_prayer_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1" />

                        <include
                            android:id="@+id/cardMidnight"
                            layout="@layout/item_prayer_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1" />
                    </GridLayout>
                </LinearLayout>

            <LinearLayout
                android:id="@+id/announcementsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:padding="12dp"
                android:divider="@android:color/transparent"
                android:showDividers="middle" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/footerBannerCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp"
                app:strokeColor="@android:color/transparent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_footer_banner"
                    android:gravity="center"
                    android:lineSpacingExtra="2dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp"
                    android:text="@string/home_footer_message"
                    android:textColor="#0A0A0A"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/updatePromptContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="24dp"
        android:visibility="gone">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="28dp"
            app:cardElevation="8dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@drawable/bg_card_glass">

                <TextView
                    android:id="@+id/textUpdateTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/update_required_title"
                    android:textColor="#042F2F"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textUpdateBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textColor="#0F172A"
                    android:textSize="14sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonForceUpdate"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="@string/update_required_button"
                    android:textAllCaps="false" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/stateContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:background="#B3000000"
        android:backgroundTint="#88000000"
        android:backgroundTintMode="src_atop"
        android:elevation="6dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressIndicator"
            style="@android:style/Widget.ProgressBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="@color/emeraldAccent"
            android:indeterminateTintMode="src_in" />

        <TextView
            android:id="@+id/stateMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="در حال بروزرسانی داشبورد..."
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/retryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/emeraldAccent"
            android:text="تلاش دوباره"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:visibility="gone" />
    </LinearLayout>

</FrameLayout>
