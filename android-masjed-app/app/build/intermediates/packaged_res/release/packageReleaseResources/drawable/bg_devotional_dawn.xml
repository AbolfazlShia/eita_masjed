<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#0A4F3C"
                android:centerColor="#1DB57A"
                android:endColor="#FFEAB2"
                android:angle="270" />
        </shape>
    </item>

    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1A043825"
                android:endColor="@android:color/transparent"
                android:angle="90" />
        </shape>
    </item>

    <item android:gravity="top">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#66F3E6A4"
                android:endColor="@android:color/transparent"
                android:angle="180" />
        </shape>
    </item>

    <item
        android:gravity="top|center_horizontal"
        android:top="-20dp">
        <shape android:shape="oval">
            <size
                android:width="720dp"
                android:height="420dp" />
            <gradient
                android:startColor="#CCFFF0C2"
                android:endColor="@android:color/transparent"
                android:angle="90" />
        </shape>
    </item>
</layer-list>
