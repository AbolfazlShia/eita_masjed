<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1AFFFFFF"
    android:orientation="vertical"
    android:padding="18dp">

    <TextView
        android:id="@+id/willName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#042F2F"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="نام شهید" />

    <TextView
        android:id="@+id/willUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#0b1f33"
        android:textSize="12sp"
        android:text="یگان" />

    <TextView
        android:id="@+id/willContext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#074B49"
        android:textSize="12sp"
        android:text="موقعیت" />

    <TextView
        android:id="@+id/willExcerpt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#03111a"
        android:textSize="14sp"
        android:lineSpacingExtra="4dp"
        android:text="خلاصه وصیت" />

    <TextView
        android:id="@+id/willTags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#047857"
        android:textSize="12sp"
        android:text="برچسب‌ها" />
</LinearLayout>
